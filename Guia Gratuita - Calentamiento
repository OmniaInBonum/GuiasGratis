    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Select elements specific to this guide to avoid conflicts if multiple guides are on one page
            const guideContainer = document.getElementById('interactive-guide-calentamiento');
            if (!guideContainer) return; // Exit if this guide's container isn't found

            const steps = guideContainer.querySelectorAll('#steps-container-calentamiento .step-content');
            const prevButton = guideContainer.querySelector('#prev-button-calentamiento');
            const nextButton = guideContainer.querySelector('#next-button-calentamiento');
            const stepIndicator = guideContainer.querySelector('#step-indicator-calentamiento');
            const progressBar = guideContainer.querySelector('#progress-bar-calentamiento');
            const navigationButtonsContainer = guideContainer.querySelector('#navigation-buttons-calentamiento');
            const completionContainer = guideContainer.querySelector('#completion-container-calentamiento');
            const restartButton = guideContainer.querySelector('#restart-button-calentamiento');
            const yearSpan = guideContainer.querySelector('#current-year-calentamiento');
            
            let currentStep = 0;
            const totalSteps = steps.length;

            if(yearSpan) yearSpan.textContent = new Date().getFullYear();

            function updateStepDisplay() {
                if (!steps.length || !stepIndicator || !progressBar || !prevButton || !nextButton || !navigationButtonsContainer || !completionContainer) {
                    console.error("Error: Uno o más elementos de la guía de calentamiento no se encontraron.");
                    return;
                }

                steps.forEach((step) => {
                    step.classList.add('hidden');
                });

                if (steps[currentStep]) {
                    steps[currentStep].classList.remove('hidden');
                }
                
                stepIndicator.textContent = `Paso ${currentStep + 1} de ${totalSteps}`;
                const progressPercentage = totalSteps > 0 ? ((currentStep + 1) / totalSteps) * 100 : 0;
                progressBar.style.width = `${progressPercentage}%`;

                prevButton.disabled = currentStep === 0;
                
                if (currentStep === totalSteps - 1) {
                    nextButton.innerHTML = 'Finalizar <i class="fas fa-check ml-2"></i>';
                    navigationButtonsContainer.classList.add('hidden');
                    completionContainer.classList.remove('hidden');
                } else {
                    nextButton.innerHTML = 'Siguiente <i class="fas fa-arrow-right ml-2"></i>';
                    navigationButtonsContainer.classList.remove('hidden');
                    completionContainer.classList.add('hidden');
                }
                
                // Scroll to the top of the guide content
                guideContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }

            if (nextButton) {
                nextButton.addEventListener('click', () => {
                    if (currentStep < totalSteps - 1) {
                        currentStep++;
                        updateStepDisplay();
                    }
                });
            }

            if (prevButton) {
                prevButton.addEventListener('click', () => {
                    if (currentStep > 0) {
                        currentStep--;
                        updateStepDisplay();
                    }
                });
            }

            if (restartButton) {
                restartButton.addEventListener('click', () => {
                    currentStep = 0;
                    updateStepDisplay();
                });
            }
            
            // Initialize
            if (totalSteps > 0) {
                updateStepDisplay();
            } else {
                console.warn("Advertencia: No se encontraron pasos en la guía de calentamiento.");
            }
        });
    </script>
</body>
</html>
